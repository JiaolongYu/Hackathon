<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backGround"
    tools:context="com.weareonfire.gocha.gocha.SingleModeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--score part -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".11">
            <TextView
                android:id="@+id/ScoreText"
                android:text="Score:"
                android:layout_marginTop="@dimen/score_mergin"
                android:layout_marginLeft="@dimen/score_mergin"
                android:layout_marginRight="@dimen/score_mergin"
                android:layout_gravity="top|start"
                android:textColor="@color/White"
                android:textSize="@dimen/score_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ScoreNum"
                android:text="0"
                android:layout_marginTop="@dimen/score_mergin"
                android:layout_toRightOf="@+id/ScoreText"
                android:textColor="@color/White"
                android:textSize="@dimen/score_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ExemptText"
                android:text="Exempt:"
                android:layout_marginTop="@dimen/score_mergin"
                android:layout_marginLeft="@dimen/score_mergin"
                android:layout_marginRight="@dimen/score_mergin"
                android:layout_toRightOf="@id/ScoreNum"
                android:layout_gravity="top|start"
                android:textColor="@color/White"
                android:textSize="@dimen/score_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ExemptNum"
                android:text="0"
                android:layout_marginTop="@dimen/score_mergin"
                android:layout_toRightOf="@+id/ExemptText"
                android:textColor="@color/White"
                android:textSize="@dimen/score_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <!--Main game part -->

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/score_mergin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".89"
            android:background="@color/button">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/lefthalf"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:id="@+id/leftout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <RelativeLayout
                                    android:layout_alignParentBottom="true"
                                    android:id="@+id/leftoutimage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/leftin"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/ic_record_voice_over_black_24dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/righthalf"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:id="@+id/rightin"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <RelativeLayout
                                    android:layout_alignParentBottom="true"
                                    android:id="@+id/rightinimage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/rightout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/ic_record_voice_over_black_24dp"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white" />
                <ImageView
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ink"
                    android:visibility="invisible"/>
        </RelativeLayout>

    </LinearLayout>

    <!--game over part-->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/gameover"
        android:background="@color/backGround"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/gameoverpoints"
            android:layout_weight="2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="@dimen/front_page_button_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/restart"
                android:text="RESTART"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="@dimen/front_page_button_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/quit"
                android:text="QUIT"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
